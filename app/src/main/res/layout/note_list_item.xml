<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/list_item_note_updated_at_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/updated_at"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/list_item_note_updated_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/list_item_note_updated_at_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_note_updated_at_label"
        android:background="@drawable/note_content_background"
        android:textColor="@color/very_dark_blue"
        android:padding="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
